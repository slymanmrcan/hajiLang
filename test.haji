// 2. Recursive (Ã–zyinelemeli) Fonksiyonlar
// ------------------------------------------
haji fibonacci = fn(x) {
    if (x == 0) {
        return 0
    }
    if (x == 1) {
        return 1
    }
    return fibonacci(x - 1) + fibonacci(x - 2)
}

yaz(">> Fibonacci(10) HesaplanÄ±yor...")
