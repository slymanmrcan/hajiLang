// 4. Diziler ve Kendi 'Map' Fonksiyonumuz
// ------------------------------------------
haji map = fn(arr, f) {
    haji iter = fn(arr, birikim) {
        if (len(arr) == 0) {
            return birikim
        }
        haji bas = first(arr)
        haji kuyruk = rest(arr)
        haji yeniBirikim = push(birikim, f(bas))
        return iter(kuyruk, yeniBirikim)
    }
    return iter(arr, [])
}

haji sayilar = [1, 2, 3, 4]
haji kareler = map(sayilar, fn(x) { return x * x })

yaz("-------------------------------------")
yaz("Dizi:   ", sayilar)
yaz("Kareler:", kareler)

